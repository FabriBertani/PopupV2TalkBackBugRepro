<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="PopupV2TalkBackIssue.Popups.ComplexPopup"
    Padding="10"
    Margin="0"
    CanBeDismissedByTappingOutsideOfPopup="False">
    <Grid
        RowDefinitions="Auto, Auto, Auto, Auto, Auto"
        ColumnDefinitions="*, *"
        RowSpacing="10"
        ColumnSpacing="10">
        <Label
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            HorizontalTextAlignment="Center"
            FontAttributes="Bold"
            FontSize="Large"
            Text="Popup Title" />
        <Image
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Source="dotnet_bot.png"
            HeightRequest="300"
            Aspect="AspectFit"
            SemanticProperties.Description="dot net bot in a hovercraft number nine" />
        <Label
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            FontSize="Small">
            <Label.FormattedText>
                <FormattedString>
                    <Span
                        FontSize="Small"
                        FontAttributes="Bold"
                        Text="Description:" />
                    <Span
                        Text=" " />
                    <Span
                        Text="Dot Net bot in a hovercraft" />
                </FormattedString>
            </Label.FormattedText>
        </Label>
        <Entry
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Placeholder="Type something here"
            SemanticProperties.Description="Input field to type something" />
        <Button
            Grid.Row="4"
            Grid.Column="0"
            BackgroundColor="Green"
            FontAttributes="Bold"
            TextColor="White"
            Text="OK"
            Clicked="OnPopupCompletedClicked" />
        <Button
            Grid.Row="4"
            Grid.Column="1"
            BackgroundColor="Red"
            FontAttributes="Bold"
            TextColor="White"
            Text="Close"
            Clicked="OnPopupCompletedClicked" />
    </Grid>
</toolkit:Popup>