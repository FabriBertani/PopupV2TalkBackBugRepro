<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="PopupV2TalkBackIssue.Popups.SimplePopup"
    Padding="10"
    Margin="0">
    <VerticalStackLayout
        Spacing="10">
        <Label
            HorizontalTextAlignment="Center"
            FontAttributes="Bold"
            FontSize="Large"
            Text="Very important Title" />
        <Label
            Text="This is a very important message! Do you agree?"
            SemanticProperties.Description="This semantic property description is different from content." />
        <Button
            Text="Close Popup"
            FontAttributes="Bold"
            Clicked="OnClosePopupButtonClicked" />
    </VerticalStackLayout>
</toolkit:Popup>